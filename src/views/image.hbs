<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="text-header">{{image.title}}</h2>
        <button class="btn btn-danger" id="btnDelete" data-id="{{image.uniqueId}}">
            <i class="fa fa-times"></i><span class="delSpan"> Delete</span> 
        </button>
    </div>
    <div class="card-body">
        <div class="text-center">
            <img id="img" src="/public/upload/{{image.filename}}" class="img-fluid" alt="Image">
            <p class="p-2">{{image.description}}</p>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btnLike" data-id="{{image.uniqueId}}"><i class="fas fa-thumbs-up"></i> Like</button>
        <p>
            <span class="likes-count"> {{image.likes}} </span><i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{image.views}}
        </p>
        <p>
            <i class="far fa-clock"></i> {{format image.created_at}}
        </p>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button class="btn btn-info" id="btnComment"><i class="fa fa-comment-o"></i> Post a Comment</button>
    </div>
    <div class="card-body">
        <blockquote id="comments">
            <form action="/images/{{image.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Name" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Email" name="email" required>
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Your comment" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success"><i class="fa fa-comment"></i> Post</button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
                <li class="list-group-item">
                    <div class="row">
                        <a href="#" class="col-text-center">
                            <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="Avatar">
                        </a>
                        <blockquote class="col">
                            <p class="lead">{{comment}}</p>
                            <footer class="blockquote-footer">
                                {{name}} - {{format created_at}}
                            </footer>
                        </blockquote>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
